{
  "name": "TISS Auto Login",
  "version": "1.0",
  "description": "A chrome extension that automatically logs you into TISS and Tuwel",
  "permissions": ["storage"],
  "options_page": "src/options.html",
  "background": {
    "scripts": ["src/js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/img/icon16.png",
      "32": "src/img/icon32.png",
      "48": "src/img/icon48.png",
      "128": "src/img/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://iu.zid.tuwien.ac.at/AuthServ.authenticate?app=*",
        "https://oase.it.tuwien.ac.at/AuthServ.authenticate?app=*"
      ],
      "js": ["src/js/tissAuth.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://tuwel.tuwien.ac.at/auth/zid/*",
        "https://tuwel.tuwien.ac.at/theme/university_boost/login/index.php*"
      ],
      "js": ["src/js/tuwelButtonClick.js"]
    }
  ],
  "icons": {
    "16": "src/img/icon16.png",
    "32": "src/img/icon32.png",
    "48": "src/img/icon48.png",
    "128": "src/img/icon128.png"
  },
  "manifest_version": 2
}